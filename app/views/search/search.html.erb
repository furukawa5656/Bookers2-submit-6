<div class="container">
	<div class="row">
		<div class="col-xs-10">


			<% if @user_or_book == "1"%>
			    <h1>Users</h1>
			    <table class="table">
			    	<thead>
						<tr>
							<th></th>
							<th>name</th>
							<th>introduction</th>
						</tr>
				    </thead>
			        <% @users.each do |user| %>
			        <tbody>
			            <tr>
			            	<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
			                <td><%= user.name %></td>
			                <td><%= user.introduction %></td>
			            </tr>
			        </tbody>
			        <% end %>
			    </table>


			<% elsif @user_or_book == "2" %>
			    <h2>books</h2>
			    <table class="table">
			    	<thead>
						<tr>
							<th></th>
							<th>title</th>
							<th>opinion</th>
						</tr>
				    </thead>
			        <% @books.each do |book| %>
			        <tbody>
			            <tr>
			            	<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
			                <td><%= book.title %></td>
			                <td><%= book.body %></th>
			            </tr>
			        </tbody>
			    <% end %>
			    </table>
			<% else %>
			<% end %>


        </div>
    </div>
</div>