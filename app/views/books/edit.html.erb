<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<div class="row form">
		      <%= form_for(@book) do |f| %>
		      <% if @book.errors.any? %>
		      <h3><%= @book.errors.count %> error</h3>
		      <ul>
			    <% @book.errors.full_messages.each do |message| %>
			    <%= message %>
			  <% end %>
		      </ul>
              <% end %>
		      <div class="row">
		        <h4>title</h4>
		        <%= f.text_field :title, class: "col-xs-12 book_title"%>
		      </div>
		      <div class="row">
		        <h4>opinion</h4>
		        <%= f.text_area :body, class: "col-xs-12 book_opinion" %>
		      </div>
		      <div class="row">
		        	<%= f.submit 'Update Book', class: 'btn btn-primary col-xs-12 book_update edit-update-book' %>
		      </div>
		      <% end %>
		    </div>
		    <div class="row">
		      <%= link_to "Show", book_path(@book.id) %>
	          <span> | </span>
	          <%= link_to "Back", books_path %>
	        </div>
		</div>
		<div class="col-md-3">
		</div>
	</div>
</div>


