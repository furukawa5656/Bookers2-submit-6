
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<% if flash[:notice] %>
            <div class="notice">
			<%= flash[:notice] %>
			</div>
            <% end %>
			<h2>User info</h2>
		    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
		    <table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<td>introduction</td>
						<td><%= @user.introduction %></td>
					</tr>
					<tr>
						<td>follows</td>
						<td ><%= link_to @user.followings.count, follows_user_path(@user) %></td>
					</tr>
					<tr>
						<td>followers</td>
						<td><%= link_to @user.followers.count, followers_user_path(@user) %></td>
					</tr>
				</tbody>
			</table>
			<% if current_user != @user %>
			<div class="follow-btn">
			    <% if @user.followed_by?(current_user) %>
					<%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger btn-sm" %>
				<% else %>
					<%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success btn-sm" %>
				<% end %>
			</div>
			<% end %>
			<div class="row edit">
				<% if @user.id == current_user.id %>
					<%= link_to edit_user_path(@user.id) do %>
					<span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end %>
				<% else @user.id != current_user.id %>
					<%= link_to user_path(current_user) do %>
					<span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" aria-hidden="true"></span>
					<% end %>
				<% end %>
			</div>
		    <div class="row form">
		      <h2 class="side-newbook">New book</h2>
		      <%= form_for(@book) do |f| %>
		      <% if @book.errors.any? %>
		      <h3><%= @book.errors.count %> error</h3>
		      <ul>
			    <% @book.errors.full_messages.each do |message| %>
			    <%= message %>
			  <% end %>
		      </ul>
              <% end %>
		      <div class="">
		        <h4>title</h4>
		        <%= f.text_field :title, class: "col-xs-12 book_title"%>
		      </div>
		      <div class="">
		        <h4>opinion</h4>
		        <%= f.text_area :body, class: "col-xs-12 book_body"%>
		      </div>
		      <div class="">
		        <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12 side-create" %>
		      </div>
		      <% end %>
		    </div>
		</div>


		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<% @books.each do |book| %>
				<tbody>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
						<td>コメント数: <%= book.book_comments.count %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
	    </div>
	</div>
</div>


